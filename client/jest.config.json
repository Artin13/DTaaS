{
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
        "node_modules",
        "build"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "coverageThreshold": {
        "global": {
            "branches": 20,
            "functions": 30,
            "lines": 50,
            "statements": 50
        }
    },
    "globals": {
        "window.ENV.SERVER_HOSTNAME": "localhost",
        "window.ENV.SERVER_PORT": 3500
    },
    "verbose": true,
    "testRegex": "/test/.*\\.[jt]sx?$"
}

